.header {
  position: relative;
}
.header-input {
  /* height: 72rpx; */
  line-height: 72rpx;
  margin: 22rpx 36rpx 14rpx;
  padding: 0 36rpx;
  border: 1rpx solid #D9DDE1;
  border-radius: 36rpx;
  text-align: center;
  font-size: 26rpx;
}
.header-input-placeholder {
  color: rgba(133, 133, 133, 0.6);
}
.header-input-icon {
  position: absolute;
  left: 50%;
  top: 14rpx;
  transform: translate(-186rpx);
  color: rgba(133, 133, 133, 0.6);
}
.navigator {
  display: flex;
  line-height: 112rpx;
  margin-bottom: 6rpx;
}
.navigator-item {
  position: relative;
  flex: 1;
  width: 176pxrpx;
  height: 112rpx;
  text-align: center;
  vertical-align: middle;
  font-size: 32rpx;
  color: #2B333B;
}
.navigator-img {
  position: relative;
  top: 8rpx;
  width: 36rpx;
  height: 36rpx;
}
.navigator-active {
  position: absolute;
  left: 90rpx;
  bottom: 20rpx;
  width: 32rpx;
  height: 8rpx;
  background-color: #F01414;
}
.navigator-active-recommend {
  background-color: #f01414;
}
.navigator-active-path {
  background-color: #8000FF;
}
.navigator-active-project {
  background-color: #B18904;
}
.navigator-active-activity {
  background-color: #FA58F4;
}
.swiper-img {
  width: 708rpx;
  height: 234rpx;
  border-radius: 12rpx;
}
.swiper-item {
  box-sizing: border-box;
  padding: 0 6rpx;
}
.swiper {
  height: 234rpx;
}
.project {
  margin-top: 32rpx;
  margin-left: 40rpx;
}
.project-title{
  line-height: 32rpx;
  font-style: 28rpx;
  color: #2B333B;
}
.project-item {
  display: flex;
  margin-top: 30rpx;
}
.project-item-pic {
  width: 208rpx;
  height: 136rpx;
  border-radius: 16rpx;
}
.project-item-content {
  flex: 1;
  margin-left: 24rpx;
  margin-right: 40rpx;
  padding-bottom: 28rpx;
  border-bottom: 1px solid #D9DDE1;
}
.project-item-title{
  line-height: 40rpx;
  font-size: 32rpx;
  color: #2B333B;
  font-weight: 700;
}
.project-item-tags {
  line-height: 32rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
}
.project-item-tags view {
  float: left;
  margin-right: 18rpx;
}
.project-item-text {
  color: #71777D;
}
.project-item-price-active {
  color: #F01414;
  font-weight: 700;
}
.project-item-notice{
  padding: 0 10rpx;
  background: rgba(242, 13, 13, 0.1);
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #f20d0d;
}
.project-item-user{
  line-height: 32rpx;
  color: #71777D;
  font-size: 24rpx;
}
.project-item-icon {
  position: relative;
  top: 5rpx;
  left: 4rpx;
  width: 24rpx;
  height: 24rpx;
}
.project-empty{
  margin-top: 20rpx;
  font-size: 24rpx;
}
.activity-item {
  display: block;
  width: 702rpx;
  height: 232rpx;
  margin: 0 auto 32rpx;
  border-radius: 12rpx;
}
